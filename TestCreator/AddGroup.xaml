<Window x:Class="TestCreator.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCreator"
        mc:Ignorable="d"
        Title="AddGroup" Height="300" Width="400">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="group_name" HorizontalAlignment="Center" Margin="0,45,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="30"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="group_password" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="30" Margin="0,100,0,0"/>
        <RadioButton x:Name="radioButtonPublic" Content="public" HorizontalAlignment="Left" GroupName="security" Margin="10,155,0,0" IsChecked="True" VerticalAlignment="Top" />
        <RadioButton Content="private" HorizontalAlignment="Left" GroupName="security" Margin="10,175,0,0" VerticalAlignment="Top"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="311,241,0,0" VerticalAlignment="Top" Height="33" Width="79" Click="Button_Click_AddGroup"/>

    </Grid>
</Window>
