<Window x:Class="TestCreator.CreateTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCreator"
        mc:Ignorable="d"
        Title="CreateTest" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ListView x:Name="ListViewQuestions" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Add qustion" HorizontalAlignment="Left"
                Margin="10,0,0,10" VerticalAlignment="Bottom"
                Grid.Row="2"
                Click="Button_Click"/>

        <Button Content="save test" HorizontalAlignment="Left" 
                Margin="90,0,0,10" VerticalAlignment="Bottom" 
                Grid.Row="2"
                Click="Button_Click_Save_Test"/>
        <TextBox x:Name="ThemeTest"
            HorizontalAlignment="Center" Text="Text theme" 
                 TextWrapping="Wrap" VerticalAlignment="Center" 
                 Width="400" Height="28"/>

    </Grid>
</Window>
